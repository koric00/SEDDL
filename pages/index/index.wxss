/**index.wxss**/
.container {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 标题栏样式 */
.header {
  margin-bottom: 30rpx;
  width: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.subtitle {
  font-size: 24rpx;
  color: #888;
  margin-top: 10rpx;
  text-align: center;
}

/* 会议等级选择器 */
.tier-selector {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.tier-button {
  padding: 10rpx 30rpx;
  margin: 0 10rpx 10rpx 0;
  font-size: 28rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  color: #666;
}

.tier-button.selected {
  background-color: #1aad19;
  color: #fff;
}

/* 加载中提示 */
.loading {
  text-align: center;
  margin: 40rpx 0;
  color: #888;
}

/* 错误提示 */
.error {
  text-align: center;
  margin: 40rpx 0;
  color: #e64340;
}

.retry-button {
  margin-top: 20rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
}

/* 会议列表样式 */
.deadlines-list {
  width: 100%;
}

.meeting-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
}

.meeting-info {
  flex: 1;
}

.meeting-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.meeting-name {
  font-size: 32rpx;
  font-weight: bold;
}

.meeting-tier {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.tier-A {
  background-color: #e64340;
  color: white;
}

.tier-B {
  background-color: #1aad19;
  color: white;
}

.tier-C {
  background-color: #576b95;
  color: white;
}

.meeting-type {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.meeting-deadline {
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
}

.meeting-location {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.location-icon {
  margin-right: 8rpx;
}

.meeting-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  margin-left: 20rpx;
}

.deadline-days {
  font-size: 28rpx;
  color: #1aad19;
  margin-bottom: 20rpx;
  white-space: nowrap;
}

.deadline-days.urgent {
  color: #e64340;
  font-weight: bold;
}

.add-calendar-icon {
  font-size: 36rpx;
  color: #1aad19;
  padding: 10rpx;
}

/* 没有数据时的样式 */
.no-data {
  text-align: center;
  margin: 40rpx 0;
  color: #999;
  font-size: 28rpx;
} 